{ 
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true, 
  },
  "lib": ["es2015"],
  "baseUrl": "./src",
  "paths": {
    "@services/*": ["serives/*"]
  }
}
